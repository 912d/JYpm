<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" alignment="CENTER" maxHeight="1.7976931348623157E308"
          maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0"
          prefWidth="800.0" stylesheets="@../stylesheet.css" xmlns="http://javafx.com/javafx/8.0.141"
          fx:controller="com.github.open96.fxml.NotificationBarController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="110.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="80.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="100.0"/>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="350.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Button fx:id="syncButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                text="Sync all" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.valignment="CENTER"
                onAction="#onSyncButtonClick"/>
        <Button fx:id="settingsButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                onAction="#onSettingsButtonClick" text="Settings" textAlignment="CENTER" GridPane.columnIndex="1"
                GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
        <Button fx:id="addPlaylistButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                onAction="#onAddPlaylistButtonClick" text="Add playlist" textAlignment="CENTER" GridPane.columnIndex="2"
                GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
        <Label fx:id="notificationText" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
               maxWidth="1.7976931348623157E308" text="..." textAlignment="CENTER"
               GridPane.columnIndex="4"/>
        <Button fx:id="detailsButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Details"
                textAlignment="CENTER" GridPane.columnIndex="5" GridPane.halignment="CENTER"
                onAction="#onDetailsButtonClick"
                GridPane.valignment="CENTER"/>
    </children>
</GridPane>
