<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity"
          minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="256.0" prefWidth="600.0" stylesheets="@../stylesheet.css"
          xmlns="http://javafx.com/javafx/8.0.141" fx:controller="com.github.open96.fxml.AddPlaylistWindowController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="209.0" minHeight="10.0" prefHeight="205.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="122.0" minHeight="10.0" prefHeight="52.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label fx:id="playlistLinkLabel" text="Playlist link" GridPane.halignment="LEFT"
                       GridPane.valignment="CENTER">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </Label>
                <Label fx:id="playlistDirectoryLabel" text="Playlist directory" GridPane.halignment="LEFT"
                       GridPane.rowIndex="1" GridPane.valignment="CENTER">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </Label>
                <TextField fx:id="playlistLinkTextField" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                           GridPane.valignment="CENTER">
                    <GridPane.margin>
                        <Insets left="10.0" right="10.0"/>
                    </GridPane.margin>
                </TextField>
                <GridPane GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" prefWidth="60.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label fx:id="directoryLabel" alignment="CENTER_RIGHT" maxHeight="-Infinity"
                               maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0"
                               prefWidth="230.0" text="None" GridPane.halignment="RIGHT">
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                        </Label>
                        <Button fx:id="directoryChooserButton" minHeight="-Infinity" minWidth="-Infinity"
                                mnemonicParsing="false" onAction="#onDirectoryChooserButtonClick" prefHeight="25.0"
                                prefWidth="50.0" text="..." GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets right="10.0"/>
                            </GridPane.margin>
                        </Button>
                    </children>
                </GridPane>
            </children>
        </GridPane>
        <Button fx:id="addPlaylistButton" mnemonicParsing="false" onAction="#onAddPlaylistButtonClick"
                text="Add playlist" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                GridPane.valignment="CENTER"/>
    </children>
</GridPane>
