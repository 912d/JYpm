<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="300.0" prefWidth="600.0" stylesheets="@../stylesheet.css" xmlns="http://javafx.com/javafx/9"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.open96.jypm.fxml.SettingsWindowController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="209.0" minHeight="10.0" prefHeight="205.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="122.0" minHeight="10.0" prefHeight="52.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label fx:id="executableVersionTextLabel" minHeight="25.0" minWidth="200.0"
                       text="Youtube-dl executable version" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </Label>
                <Label fx:id="fileManagerCommandLabel" minHeight="25.0" minWidth="160.0" text="File manager command"
                       GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </Label>
                <TextField fx:id="fileManagerCommandTextField" alignment="CENTER" GridPane.columnIndex="1"
                           GridPane.rowIndex="4">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <GridPane.margin>
                        <Insets left="10.0" right="10.0"/>
                    </GridPane.margin>
                </TextField>
                <Label fx:id="notificationLabel" minHeight="25.0" minWidth="85.0" text="Notifications"
                       GridPane.rowIndex="5">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </Label>
                <CheckBox fx:id="notificationCheckBox" alignment="CENTER_RIGHT" ellipsisString="" minHeight="18.0"
                          minWidth="30.0" mnemonicParsing="false" nodeOrientation="RIGHT_TO_LEFT" textAlignment="RIGHT"
                          GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="5">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                    <GridPane.margin>
                        <Insets right="10.0"/>
                    </GridPane.margin>
                </CheckBox>
                <Label fx:id="runtimeVersionTextLabel" minHeight="25.0" minWidth="85.0" text="JYpm version">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </Label>
                <GridPane GridPane.columnIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label fx:id="runtimeVersionLabel" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
                               minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="130.0"
                               text="None" GridPane.halignment="RIGHT">
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                            <padding>
                                <Insets left="10.0" right="10.0"/>
                            </padding>
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </Label>
                        <Button fx:id="updateAppButton" minHeight="26.0" minWidth="80.0" mnemonicParsing="false"
                                onAction="#onUpdateAppButtonClick" prefWidth="130.0" text="Check for update"
                                textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                                GridPane.valignment="CENTER">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </Button>
                    </children>
                </GridPane>
                <GridPane prefHeight="40.0" prefWidth="180.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label fx:id="executableVersionLabel" alignment="CENTER" maxHeight="-Infinity"
                               maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0"
                               prefWidth="130.0" text="None" GridPane.halignment="RIGHT">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                            <padding>
                                <Insets left="10.0" right="10.0"/>
                            </padding>
                        </Label>
                        <Button fx:id="updateYTDLButton" minHeight="26.0" minWidth="80.0" mnemonicParsing="false"
                                onAction="#onUpdateYTDLButtonClick" prefWidth="110.0" text="Force update"
                                textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                                GridPane.valignment="CENTER">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </Button>
                    </children>
                </GridPane>
                <TextField fx:id="ffmpegLocationTextField" alignment="CENTER" GridPane.columnIndex="1"
                           editable="false" onMouseClicked="#showFileChooser" GridPane.rowIndex="2">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <GridPane.margin>
                        <Insets left="10.0" right="10.0"/>
                    </GridPane.margin>
                </TextField>
                <Label fx:id="ffmpegLocationLabel" minHeight="25.0" minWidth="110.0" text="Ffmpeg location"
                       GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </Label>
                <Label fx:id="threadCountLabel" minHeight="25.0" minWidth="110.0"
                       text="Concurrent conversions (restart required)" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </Label>
                <GridPane GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="40.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button fx:id="decrementThreadCountButton" maxHeight="-Infinity" maxWidth="-Infinity"
                                minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                onAction="#onDecrementThreadCountButtonClick" prefHeight="26.0" prefWidth="35.0"
                                text="-" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                            <GridPane.margin>
                                <Insets left="50.0"/>
                            </GridPane.margin>
                        </Button>
                        <Button fx:id="incrementThreadCountButton" maxHeight="-Infinity" maxWidth="-Infinity"
                                minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                onAction="#onIncrementThreadCountButtonClick" prefHeight="26.0" prefWidth="35.0"
                                text="+" GridPane.columnIndex="2" GridPane.halignment="CENTER"
                                GridPane.valignment="CENTER">
                            <GridPane.margin>
                                <Insets right="50.0"/>
                            </GridPane.margin>
                        </Button>
                        <Label fx:id="threadCounterLabel" maxHeight="-Infinity" minHeight="-Infinity"
                               minWidth="-Infinity" prefHeight="26.0" text="99" GridPane.columnIndex="1"
                               GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                    </children>
                </GridPane>
                <Label fx:id="youtubeDlFallbackLabel" minHeight="25.0" minWidth="85.0" text="Youtube-dl fallback mode"
                       GridPane.rowIndex="6">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </Label>
                <CheckBox fx:id="youtubeDlFallbackCheckBox" alignment="CENTER_RIGHT" ellipsisString="" minHeight="18.0"
                          minWidth="30.0" mnemonicParsing="false" nodeOrientation="RIGHT_TO_LEFT" textAlignment="RIGHT"
                          GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="6">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                    <GridPane.margin>
                        <Insets right="10.0"/>
                    </GridPane.margin>
                </CheckBox>
            </children>
        </GridPane>
        <GridPane GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
            </rowConstraints>
            <children>
                <Button fx:id="saveSettingsButton" minHeight="26.0" minWidth="150.0" mnemonicParsing="false"
                        onAction="#onSaveSettingsButtonClick" text="Save and close" textAlignment="CENTER"
                        GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                <Button fx:id="restoreDefaultsButton" minHeight="26.0" minWidth="150.0" mnemonicParsing="false"
                        onAction="#onRestoreDefaultsButtonClick" text="Restore defaults" textAlignment="CENTER"
                        GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                <Button fx:id="visitGitHubButton" minHeight="26.0" minWidth="150.0" mnemonicParsing="false"
                        onAction="#onVisitGitHubButtonClick" text="Visit GitHub" textAlignment="CENTER"
                        GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
            </children>
        </GridPane>
    </children>
</GridPane>
